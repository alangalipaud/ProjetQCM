                        <div class="thumbnail">
                            <a title="Java EE" href="#">
                                <img class="img-responsive" src="{{ asset('public/images/symfony.jpg') }}">
                                <div class="caption">
                                    <h3 class="text-center">Symfony</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-xs-6 text-center">
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center">
                            <h3>Temps de passage :</h3>
                            <h1><div id="time_symfony" class="label label-default">10:00</div></h1>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center top-buffer">
                            <h4>40 questions</h4>
                        </div>
                    </div>
                </div>
          </div>
          <hr>
          <a href="#" class="col-md-12">
