{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="row">
            <h1>Tests disponibles</h1>
            <h2>{{ entities|length }} test(s) disponnible(s)</h2>
            <div class="row">
                {% for entity in entities %}
                    <div class="col-lg-6 col-sm-6 col-xs-6">
                        <div class="col-lg-6 col-sm-6 col-xs-6">
                            <div class="thumbnail">
                                <a title="PHP" href="#">
                                    <img class="img-responsive" src="{{ asset('public/images/php.jpg') }}">
                                    <div class="caption">
                                        <h3 class="text-center">{{ entity.currentTest.registrationid.testid }}</h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-xs-6 text-center">
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center">
                            <h3>Temps de passage :</h3>
                            <h1><div class="label label-default">{{ entity.currentTest.registrationid.testid.timepassing.format('i:s') }}</div></h1>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center top-buffer">
                            <h4>{{ entity.numberofquestions }} questions</h4>
                        </div>
                    </div>
                    </div>
                {% endfor %}
                <div class="col-lg-6 col-sm-6 col-xs-6">
                    <div class="col-lg-6 col-sm-6 col-xs-6">
                        <div class="thumbnail">
                            <a title="Java EE" href="#">
                                <img class="img-responsive" src="{{ asset('public/images/Java EE.jpg') }}">
                                <div class="caption">
                                    <h3 class="text-center">Java EE</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-xs-6 text-center">
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center">
                            <h3>Temps restant :</h3>
                            <h1><div id="remaining_time_java_ee" class="label label-primary">05:23</div></h1>
                        </div>
                        <div class="col-lg-12 col-sm-12 col-xs-12 text-center top-buffer">
