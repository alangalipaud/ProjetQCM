{% extends '::base.html.twig' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}
{% block body -%}
    <div class="col-md-12">
        <h1>Test</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Timepassing</th>
                    <td>{{ entity.timepassing|date('H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Step1</th>
                    <td>{{ entity.step1 }}</td>
                </tr>
                <tr>
                    <th>Step2</th>
                    <td>{{ entity.step2 }}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
            </tbody>
        </table>
        <br>        
        <a href="{{ path('test') }}" class="btn btn-primary no-margin">
            Back to the list
            <span class="glyphicon glyphicon-list" aria-hidden="true">
            </span>
        </a>
        <br>
        <br>
        <a href="{{ path('test_edit', { 'id': entity.id }) }}" class="btn btn-success no-margin">
            Edit
            <span class="glyphicon glyphicon-edit" aria-hidden="true">
            </span>
        </a>
        <br>
        <br>
        {{ form(delete_form) }}
    </div>
{% endblock %}
